program="tcc"
version="$VER_tcc"
release="1"
arch="i686"

tarname=${program}-${version}.tar.bz2

description="

TinyCC (aka TCC) is a small but hyper fast C compiler. Unlike other C 
compilers, it is meant to be self-relying: you do not need an external 
assembler or linker because TCC does that for you. 
---
"

build() {

. /home/0-var-chroot-rc

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\n CreaciÃ³n paquete Qi $program para 32 bit" >> $FILE_BITACORA

./configure \
--prefix=/usr \
--libdir=/lib \
--crtprefix=/usr/lib \
--sysincludepaths \
--cpu=i386

Texto1="CC=gcc"
Texto2="CC=i386-tcc"
sed -i 's/'"$Texto1"'/'"$Texto2"'/' config.mak

make

#make test 2>&1 | tee $FILE_CHECKS

make DESTDIR=${destdir} install
}











