program="e2fsprogs"
version="$VER_e2fsprogs"
release="1"
arch="i686"

tarname=${program}-${version}.tar.gz

description="

The E2fsprogs package contains the utilities for handling the ext2 file 
system. It also supports the ext3 and ext4 journaling file systems..
---
"

build() {

. /home/0-var-chroot-rc

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\n CreaciÃ³n paquete Qi $program para 32 bit" >> $FILE_BITACORA

mkdir -v build
cd build

PKG_CONFIG_PATH="${PKG_CONFIG_PATH32}" \
CC="gcc ${BUILD32}" \
../configure \
--prefix=/usr \
--bindir=/bin \
--with-root-prefix="" \
--enable-elf-shlibs \
--disable-libblkid \
--disable-libuuid \
--disable-fsck \
--disable-uuidd

make

#make check 2>&1 | tee $FILE_CHECKS

make DESTDIR=${destdir} install
}











