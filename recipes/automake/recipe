program="automake"
version="$VER_automake"
release="1"
arch="i686"

tarname=${program}-${version}.tar.xz

description="

Automake is a tool for automatically generating Makefile.in files 
compliant with the GNU Coding Standards. Automake requires the use of 
Autoconf. 
---
"

build() {

. /home/0-var-chroot-rc

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\n CreaciÃ³n paquete Qi $program para 32 bit" >> $FILE_BITACORA

CC="gcc ${BUILD32}" \
CXX="g++ ${BUILD32}" \
./configure \
--prefix=/usr \
--docdir=/usr/share/doc/automake-$1

make

#sed -i "s:./configure:LEXLIB=/usr/lib/libfl.a &:" t/lex-{clean,depend}-cxx.sh
#make -j4 check 2>&1 | tee $FILE_CHECKS

make DESTDIR=${destdir} install
}











