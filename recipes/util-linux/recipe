program="util-linux"
version="$VER_util_linux"
release="1"
arch="i686"

tarname=${program}-${version}.tar.xz

description="

The Util-linux package contains miscellaneous utility programs. Among 
them are utilities for handling file systems,consoles, partitions, and 
messages.
---
"

build() {

. /home/0-var-chroot-rc

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\n CreaciÃ³n paquete Qi $program para 32 bit" >> $FILE_BITACORA

mkdir -pv ${destdir}/var/lib/hwclock

CC="gcc ${BUILD32}" \
./configure \
ADJTIME_PATH=/var/lib/hwclock/adjtime \
--libdir=/lib \
--disable-chfn-chsh \
--disable-login \
--disable-nologin \
--disable-su \
--disable-setpriv \
--disable-runuser \
--disable-pylibmount \
--disable-static \
--without-python \
--without-systemd \
--without-systemdsystemunitdir

make

#chown -Rv nobody .
#registro_error "nobody"
#su nobody -s /bin/bash -c "PATH=$PATH make -k check"

make DESTDIR=${destdir} install

}











